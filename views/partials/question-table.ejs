<table border="1" style="width: 100%; border-collapse: collapse; background: white;">
    <thead>
        <tr style="background: #f4f4f4; text-align: left; color: #333;">
            <th style="padding: 10px;">Class</th>
            <th style="padding: 10px;">Chapter</th>
            <th style="padding: 10px;">Ex</th>
            <th style="padding: 10px;">Q.No</th>
            <th style="padding: 10px;">Description</th>
            <th style="padding: 10px;">Image</th>
            <th style="padding: 10px;">Video ID</th>
            <th style="padding: 10px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if(data.length > 0) { %>
            <% data.forEach(q => { %>
                <tr>
                    <td style="padding: 10px;"><%= q.classLevel %></td>
                    <td style="padding: 10px;"><%= q.chapterName %></td>
                    <td style="padding: 10px;"><%= q.exercise || '-' %></td>
                    <td style="padding: 10px; font-weight: bold;"><%= q.questionNumber %></td>
                    <td style="padding: 10px;">
                        <div style="max-height: 50px; overflow: hidden; font-size: 14px; color: #555;">
                            <%= q.questionDescription %>
                        </div>
                    </td>
                    <td style="padding: 10px; text-align: center;">
                        <% if(q.questionImage) { %>
                            <img src="<%= q.questionImage %>" alt="Img" style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px; cursor: pointer;" onclick="openModal(this.src)">
                        <% } else { %>
                            <span style="color: #ccc;">No Img</span>
                        <% } %>
                    </td>
                    <td style="padding: 10px; font-family: monospace;"><%= q.videoID %></td>
                    <td style="padding: 10px; text-align: center; white-space: nowrap;">
                        <a href="/admin/edit/<%= q._id %>" style="text-decoration: none; margin-right: 10px; font-size: 18px;" title="Edit">‚úèÔ∏è</a>
                        <a href="/admin/delete/<%= q._id %>" onclick="return confirm('Are you sure?')" style="text-decoration: none; color: red; font-size: 18px;" title="Delete">üóëÔ∏è</a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="8" style="text-align: center; padding: 20px; color: #777;">No data found in this category.</td>
            </tr>
        <% } %>
    </tbody>
</table>