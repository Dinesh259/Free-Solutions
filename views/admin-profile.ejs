<%- include('partials/header', {title: 'Admin Profile', backLink: '/admin/dashboard'}) %>

<div class="container" style="margin-top: 60px; max-width: 450px;">
    
    <div class="card" style="padding: 40px; border-radius: 12px; box-shadow: var(--shadow); text-align: center;">
        
        <div style="width: 90px; height: 90px; background: #e74c3c; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 40px; margin: 0 auto 20px auto; font-weight: bold;">
            <%= user.name.charAt(0).toUpperCase() %>
        </div>

        <h2 style="margin: 0; color: var(--text-main); font-weight: 700;">
            <%= user.name %>
        </h2>
        
        <p style="color: var(--text-muted); font-size: 14px; margin-top: 5px;">
            Administrator
        </p>

        <hr style="margin: 25px 0; border: 0; border-top: 1px solid var(--border-color);">

        <div style="text-align: left; background: var(--bg-body); padding: 15px; border-radius: 8px; border: 1px solid var(--border-color);">
            
            <label style="color: var(--text-muted); font-size: 12px; font-weight: bold; text-transform: uppercase; display: block; margin-bottom: 5px;">
                Mobile Number
            </label>
            
            <span style="font-size: 18px; color: var(--text-main); font-family: monospace;">
                <%= user.mobile %>
            </span>
        </div>

    </div>
</div>

</body>
</html>