<%- include('partials/header', {title: 'Free Solutions', backLink: '/student/dashboard'}) %>

<style>
    /* --- Contrast Variables --- */
    :root {
        --contact-bg-body: #f4f6f8;
        --contact-card-bg: #ffffff;
        --contact-item-bg: #f8f9fa;
        --contact-text-main: #2c3e50;
        --contact-text-muted: #7f8c8d;
        --contact-label: #34495e;
        --contact-input-bg: #ffffff;
        --contact-border: #dddddd;
        --contact-accent: #3498db;
        --contact-accent-hover: #2980b9;
    }

    @media (prefers-color-scheme: dark) {
        :root {
            --contact-bg-body: #121212;
            --contact-card-bg: #1e1e1e;
            --contact-item-bg: #2d3436; 
            --contact-text-main: #ecf0f1;
            --contact-text-muted: #bdc3c7;
            --contact-label: #bdc3c7;
            --contact-input-bg: #2d3436;
            --contact-border: #444444;
            --contact-accent: #3498db;
            --contact-accent-hover: #2980b9;
        }
    }

    /* Style overrides for inputs */
    input, textarea {
        background-color: var(--contact-input-bg) !important;
        color: var(--contact-text-main) !important;
        border: 1px solid var(--contact-border) !important;
        font-family: inherit;
    }

    input:focus, textarea:focus {
        outline: 2px solid var(--contact-accent);
        border-color: transparent !important;
    }

    .contact-container {
        margin-top: 40px; 
        max-width: 700px; /* Slightly wider for desktop comfort */
        margin-left: auto; 
        margin-right: auto; 
        padding: 0 15px;
    }

    .contact-card {
        background: var(--contact-card-bg); 
        padding: 30px; 
        border-radius: 12px; 
        box-shadow: 0 5px 15px rgba(0,0,0,0.1); 
        border: 1px solid var(--contact-border);
        margin-bottom: 20px;
    }

    /* --- RESPONSIVE GRID FOR INFO BOXES --- */
    .contact-grid {
        display: grid;
        grid-template-columns: 1fr; /* Mobile: Stacked */
        gap: 15px;
    }

    /* Desktop: Side by Side */
    @media (min-width: 600px) {
        .contact-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    .info-box {
        background: var(--contact-item-bg); 
        padding: 15px; 
        border-radius: 8px; 
        display: flex; 
        align-items: center; 
        gap: 15px; 
        border: 1px solid var(--contact-border);
        transition: transform 0.2s;
    }

    .info-box:hover {
        transform: translateY(-2px); /* nice hover effect for desktop */
    }

    .send-btn {
        width: 100%; 
        padding: 12px; 
        background: var(--contact-accent); 
        font-size: 16px; 
        border: none; 
        color: white; 
        border-radius: 6px; 
        cursor: pointer; 
        font-weight: bold;
        transition: background 0.2s;
    }

    .send-btn:hover {
        background: var(--contact-accent-hover);
    }
</style>

<div class="contact-container">
    
    <div class="contact-card" style="text-align: center;">
        
        <div style="width: 80px; height: 80px; background: #e67e22; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 35px; margin: 0 auto 20px auto;">
            <i class="fas fa-headset"></i>
        </div>

        <h2 style="color: var(--contact-text-main); margin-bottom: 10px;">Get in Touch</h2>
        <p style="color: var(--contact-text-muted); margin-bottom: 30px;">Have a question or found a bug? We are here to help!</p>

        <div class="contact-grid">
            
            <div class="info-box">
                <div style="background: #3498db; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; flex-shrink: 0;">
                    <i class="fas fa-envelope"></i>
                </div>
                <div style="text-align: left;">
                    <div style="font-size: 11px; color: #95a5a6; font-weight: bold; letter-spacing: 1px;">EMAIL SUPPORT</div>
                    <div style="color: var(--contact-text-main); font-weight: 600; font-size: 14px; word-break: break-all;">support@freesolutions.com</div>
                </div>
            </div>

            <div class="info-box">
                 <div style="background: #2ecc71; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; flex-shrink: 0;">
                    <i class="fas fa-phone-alt"></i>
                </div>
                <div style="text-align: left;">
                    <div style="font-size: 11px; color: #95a5a6; font-weight: bold; letter-spacing: 1px;">HELPLINE</div>
                    <div style="color: var(--contact-text-main); font-weight: 600; font-size: 14px;">+91 98765 43210</div>
                </div>
            </div>

        </div>
    </div>

    <div class="contact-card">
        <h3 style="color: var(--contact-text-main); margin-bottom: 20px; border-left: 4px solid #3498db; padding-left: 10px;">Send us a message</h3>
        
        <form id="contactForm">
            <label style="display:block; margin-bottom:5px; font-weight:bold; color: var(--contact-label);">Subject</label>
            <input type="text" id="msgSubject" placeholder="e.g., Video Issue in Chapter 2" style="width: 100%; padding: 12px; margin-bottom: 15px; border-radius: 6px; box-sizing: border-box;">
            
            <label style="display:block; margin-bottom:5px; font-weight:bold; color: var(--contact-label);">Description</label>
            <textarea id="msgDesc" rows="5" placeholder="Describe your issue here..." style="width: 100%; padding: 12px; margin-bottom: 20px; border-radius: 6px; box-sizing: border-box;"></textarea>
            
            <button type="button" onclick="sendMessage()" class="send-btn">
                Send Message
            </button>
        </form>
    </div>
    
    <div style="height: 50px;"></div>
</div>

<script>
    function sendMessage() {
        const subject = document.getElementById('msgSubject');
        const desc = document.getElementById('msgDesc');

        if(subject.value.trim() === "" || desc.value.trim() === "") {
            alert("Please write a Subject and Description before sending.");
            return;
        }

        alert('Message Sent Successfully! We will revert back soon.');
        
        subject.value = "";
        desc.value = "";
    }
</script>

</body>
</html>