<%- include('partials/header', {title: 'Edit Solution', backLink: '/admin/database'}) %>

<% 
    const safeDataMap = (typeof dataMap !== 'undefined') ? dataMap : { English: {}, Hindi: {} };
%>

<script>
    window.MathJax = { tex: { inlineMath: [['$', '$'], ['\\(', '\\)']] } };
</script>
<script async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

<style>
    :root { 
        --bg-body: #f4f6f8; --card-bg: #ffffff; --text-color: #2c3e50; 
        --input-bg: #ffffff; --input-border: #dfe6e9; --input-focus: #3498db;
        --toolbar-bg: #2c3e50; 
    }
    @media (prefers-color-scheme: dark) {
        :root { 
            --bg-body: #121212; --card-bg: #1e1e1e; --text-color: #ecf0f1; 
            --input-bg: #2d3436; --input-border: #555555; --input-focus: #5dade2; 
            --toolbar-bg: #34495e;
        }
    }
    
    /* Global box-sizing fix */
    * { box-sizing: border-box; }

    body { background-color: var(--bg-body); color: var(--text-color); transition: background 0.3s; }
    .container { margin-top: 20px; max-width: 800px; margin-left: auto; margin-right: auto; padding: 0 15px; }
    .card { padding: 30px; background: var(--card-bg); border-radius: 8px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); border: 1px solid var(--input-border); }
    h2, label { color: var(--text-color); }
    
    .input-box { width: 100%; padding: 12px; background: var(--input-bg); color: var(--text-color); border: 2px solid var(--input-border); border-radius: 6px; margin-bottom: 5px; font-size: 16px; display: block; }
    .input-box:focus { border-color: var(--input-focus); outline: none; }
    
    .btn-save { width: 100%; background: linear-gradient(135deg, #27ae60, #2ecc71); color: white; padding: 14px; border: none; border-radius: 6px; font-size: 16px; font-weight: bold; cursor: pointer; margin-top: 10px; }
    
    /* --- TOOLBAR & PREVIEW STYLES --- */
    .math-toolbar { 
        background: var(--toolbar-bg); 
        padding: 8px; 
        border-radius: 6px 6px 0 0; 
        display: flex; 
        gap: 8px; 
        flex-wrap: wrap; 
        margin-bottom: 0; /* Connects to input below */
    }
    
    .tool-btn { 
        background: rgba(255,255,255,0.1); 
        color: white; 
        border: 1px solid rgba(255,255,255,0.2); 
        padding: 5px 12px; 
        cursor: pointer; 
        border-radius: 4px; 
        font-size: 12px; 
    }
    
    .preview-btn { background: #e67e22; border-color: #d35400; margin-left: auto; }

    /* Remove top rounding if toolbar exists */
    .has-toolbar { 
        border-top-left-radius: 0; 
        border-top-right-radius: 0; 
        border-top: none; 
    }

    /* Preview Box Strict Styling */
    .preview-box {
        display: none; 
        padding: 15px; 
        border: 2px dashed #ccc; 
        margin-top: 5px; 
        margin-bottom: 20px; 
        border-radius: 6px;
        background-color: var(--input-bg);
        color: var(--text-color);
        width: 100%;
        overflow-wrap: break-word;
        word-wrap: break-word;
        word-break: break-word;
        overflow-x: auto;
    }
</style>

<div class="container">
    <div class="card">
        <h2>‚úèÔ∏è Edit Solution</h2>

        <form action="/admin/edit/<%= content._id %>" method="POST">
            
            <div style="display: flex; gap: 15px; margin-bottom: 20px; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 150px;">
                    <label>Class</label>
                    <select name="classLevel" class="input-box">
                        <% for(let i=6; i<=12; i++){ %>
                            <option value="<%= i %>" <%= content.classLevel == i ? 'selected' : '' %>>Class <%= i %></option>
                        <% } %>
                    </select>
                </div>
                <div style="flex: 1; min-width: 150px;">
                    <label>Medium</label>
                    <select name="medium" id="mediumSelect" class="input-box" onchange="updateChapterList()">
                        <option value="Hindi" <%= content.medium == 'Hindi' ? 'selected' : '' %>>Hindi</option>
                        <option value="English" <%= content.medium == 'English' ? 'selected' : '' %>>English</option>
                    </select>
                </div>
            </div>

            <div style="margin-bottom: 20px;">
                <label>Subject</label>
                <select name="subject" id="subjectSelect" class="input-box" onchange="toggleExercise()">
                    <option value="Mathematics" <%= content.subject == 'Mathematics' ? 'selected' : '' %>>Mathematics</option>
                    <option value="Science" <%= content.subject == 'Science' ? 'selected' : '' %>>Science</option>
                </select>
            </div>

            <div style="display: flex; gap: 15px; margin-bottom: 20px; flex-wrap: wrap;">
                <div style="flex: 2; min-width: 200px;">
                    <label>Chapter Name</label>
                    <input type="text" name="chapterName" id="chapterInput" 
                           value="<%= content.chapterName %>" class="input-box" 
                           list="chapterOptions" required autocomplete="off"
                           oninput="updateExerciseList()"> <datalist id="chapterOptions"></datalist>
                </div>
                
                <div id="exerciseField" style="flex: 1; min-width: 100px;">
                    <label>Exercise</label>
                    <input type="text" name="exercise" id="exerciseInput" 
                           value="<%= content.exercise %>" class="input-box" 
                           list="exerciseOptions" autocomplete="off">
                    <datalist id="exerciseOptions"></datalist>
                </div>
                
                <div style="flex: 1; min-width: 100px;">
                    <label>Q. Number</label>
                    <input type="text" name="questionNumber" value="<%= content.questionNumber %>" class="input-box" required>
                </div>
            </div>

            <div style="margin-bottom: 20px;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                    <label style="margin-bottom:0;">Description</label>
                    <button type="button" class="tool-btn preview-btn" style="background:#e67e22; border:none;" onclick="previewDescription()">üëÅÔ∏è Preview</button>
                </div>
                <textarea id="descInput" name="questionDescription" rows="3" class="input-box"><%= content.questionDescription ? content.questionDescription.trim() : '' %></textarea>
                <div id="desc-preview" class="preview-box"></div>
            </div>

            <div style="margin-bottom: 20px;">
                <label>Video ID</label>
                <input type="text" name="videoID" value="<%= content.videoID %>" class="input-box" required>
            </div>

            <div style="margin-bottom: 30px;">
                <label>Text Solution</label>
                <div class="math-toolbar">
                    <button type="button" class="tool-btn" onclick="insertMath('\\frac{a}{b}')">¬Ω Frac</button>
                    <button type="button" class="tool-btn" onclick="insertMath('x^2')">x¬≤ Pow</button>
                    <button type="button" class="tool-btn" onclick="insertMath('\\sqrt{x}')">‚àö Root</button>
                    <button type="button" class="tool-btn" onclick="insertMath('\\times')">√ó Mult</button>
                    <button type="button" class="tool-btn" onclick="insertMath('$$ $$')">üìÑ Block</button>
                    <button type="button" class="tool-btn preview-btn" onclick="previewMath()">üëÅÔ∏è Preview</button>
                </div>
                <textarea id="solutionInput" name="textSolution" rows="8" class="input-box has-toolbar" style="font-family: monospace;"><%= content.textSolution ? content.textSolution.trim() : '' %></textarea>
                <div id="math-preview" class="preview-box"></div>
            </div>

            <button type="submit" class="btn-save">üíæ Save Changes</button>
        </form>
    </div>
    <div style="height: 50px;"></div>
</div>

<script id="server-data" type="application/json">
    <%- JSON.stringify(safeDataMap) %>
</script>

<script>
    // --- MATH INSERT & PREVIEW LOGIC ---
    function insertMath(code) {
        const ta = document.getElementById('solutionInput');
        const [start, end] = [ta.selectionStart, ta.selectionEnd];
        const text = ta.value;
        const insertText = code.includes('$$') ? code : '$' + code + '$';
        ta.value = text.substring(0, start) + insertText + text.substring(end);
        ta.selectionStart = ta.selectionEnd = start + insertText.length - (code.includes('$$') ? 3 : 1);
        ta.focus();
    }

    function previewMath() {
        const box = document.getElementById('math-preview');
        const input = document.getElementById('solutionInput');
        box.style.display = 'block';
        box.innerHTML = input.value.replace(/\n/g, "<br>"); 
        if(window.MathJax) MathJax.typesetPromise([box]);
    }

    function previewDescription() {
        const box = document.getElementById('desc-preview');
        const input = document.getElementById('descInput');
        box.style.display = 'block';
        box.innerHTML = input.value.replace(/\n/g, "<br>");
        if(window.MathJax) MathJax.typesetPromise([box]);
    }

    // --- FORM LOGIC ---
    let dataMap = {};
    try {
        dataMap = JSON.parse(document.getElementById('server-data').textContent);
    } catch (e) { console.error("Error parsing data", e); }

    function updateChapterList() {
        const medium = document.getElementById('mediumSelect').value;
        const chapterDL = document.getElementById('chapterOptions');
        chapterDL.innerHTML = ''; 
        if (dataMap[medium]) {
            Object.keys(dataMap[medium]).forEach(chap => {
                const opt = document.createElement('option');
                opt.value = chap;
                chapterDL.appendChild(opt);
            });
        }
        updateExerciseList();
    }

    function updateExerciseList() {
        const medium = document.getElementById('mediumSelect').value;
        const currentChapter = document.getElementById('chapterInput').value;
        const exerciseDL = document.getElementById('exerciseOptions');
        exerciseDL.innerHTML = ''; 
        if (dataMap[medium] && dataMap[medium][currentChapter]) {
            const exercises = dataMap[medium][currentChapter];
            exercises.forEach(ex => {
                const opt = document.createElement('option');
                opt.value = ex;
                exerciseDL.appendChild(opt);
            });
        }
    }

    function toggleExercise() {
        const subject = document.getElementById('subjectSelect').value;
        const exField = document.getElementById('exerciseField');
        const exInput = exField.querySelector('input');
        if(subject === 'Mathematics') {
            exField.style.display = 'block';
            exInput.disabled = false;
        } else {
            exField.style.display = 'none';
            exInput.disabled = true;
        }
    }

    window.onload = function() {
        toggleExercise();
        updateChapterList();  
        updateExerciseList(); 
    };
</script>