<%- include('partials/header', {title: 'Admin Dashboard'}) %>

<% 
    // 1. SAFE DATA OBJECT
    const data = (typeof formData !== 'undefined' && formData) ? formData : {}; 
    
    // 2. SAFE SUCCESS FLAG
    const isSuccess = (typeof success !== 'undefined') ? success : false;
    
    // 3. SAFE ERROR MESSAGE
    const errorMsg = (typeof error !== 'undefined') ? error : null;
%>
<script>
    window.MathJax = { tex: { inlineMath: [['$', '$'], ['\\(', '\\)']] } };
</script>
<script async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

<style>
    /* --- Styles --- */
    
    /* 1. Global Fix for Padding/Width calculations */
    * { box-sizing: border-box; }

    :root {
        --card-bg: #ffffff; --card-border: #eee; --text-color: #2c3e50;
        --input-bg: #f8f9fa; --input-border: #e0e6ed; --toolbar-bg: #2c3e50;
    }
    @media (prefers-color-scheme: dark) {
        :root {
            --card-bg: #1e1e1e; --card-border: #333; --text-color: #ecf0f1;
            --input-bg: #2d3436; --input-border: #444; --toolbar-bg: #34495e;
        }
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .dashboard-card { 
        background: var(--card-bg); 
        border: 1px solid var(--card-border); 
        padding: 30px; 
        border-radius: 12px; 
        width: 100%;
        overflow: hidden; 
    }

    .form-control { width: 100%; padding: 12px; margin-bottom: 5px; background: var(--input-bg); border: 2px solid var(--input-border); color: var(--text-color); border-radius: 8px; font-size: 15px; }
    .form-group { margin-bottom: 20px; }
    .form-group label { display: block; margin-bottom: 8px; font-weight: 600; font-size: 14px; }
    .btn-submit { background: #27ae60; color: white; width: 100%; padding: 14px; border: none; border-radius: 8px; font-weight: bold; cursor: pointer; margin-top: 10px; font-size: 16px; }
    .btn-submit:hover { transform: translateY(-2px); box-shadow: 0 4px 10px rgba(46, 204, 113, 0.3); }
    .alert { padding: 15px; border-radius: 8px; margin-bottom: 20px; font-weight: 500; }
    .alert-success { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
    .alert-error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    
    .math-toolbar { background: var(--toolbar-bg); padding: 8px; border-radius: 8px 8px 0 0; display: flex; gap: 8px; flex-wrap: wrap; }
    .tool-btn { background: rgba(255,255,255,0.1); color: white; border: 1px solid rgba(255,255,255,0.2); padding: 5px 12px; cursor: pointer; border-radius: 4px; font-size: 12px; }
    .preview-btn { background: #e67e22; border-color: #d35400; margin-left: auto; }
    
    .form-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 20px; }

    /* SHARED PREVIEW BOX STYLE (Strictly Contained) */
    .preview-box {
        display: none; 
        padding: 20px; 
        border: 2px dashed #ccc; 
        margin-top: 10px;
        margin-bottom: 15px; 
        border-radius: 8px;
        background-color: var(--input-bg);
        color: var(--text-color);
        
        /* STRICT WRAPPING RULES */
        width: 100%;
        overflow-wrap: break-word;
        word-wrap: break-word;
        word-break: break-word;
        overflow-x: auto;
    }
</style>

<div class="container">
    <div style="margin-bottom: 20px; margin-top: 20px;">
        <h2 style="color: var(--text-color);">üì§ Upload Solution</h2>
    </div>
    
    <% if(isSuccess) { %> 
        <div id="success-alert" class="alert alert-success">‚úÖ Solution uploaded successfully!</div> 
    <% } %>

    <% if (errorMsg) { %>
        <div id="error-alert" class="alert alert-error">‚ö†Ô∏è <%= errorMsg %></div>
    <% } %>
    
    <div class="dashboard-card">
        <form action="/admin/add-solution" method="POST" enctype="multipart/form-data">
            
            <div class="form-row">
                <div class="form-group">
                    <label>Class Level</label>
                    <select name="classLevel" class="form-control" required>
                        <option value="">Select Class...</option>
                        <% for(let i=6; i<=12; i++){ %>
                            <option value="<%= i %>" <%= (data.classLevel == i) ? 'selected' : '' %>>Class <%= i %></option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label>Medium</label>
                    <select name="medium" class="form-control" required>
                        <option value="">Select Medium...</option>
                        <option value="Hindi" <%= (data.medium == 'Hindi') ? 'selected' : '' %>>Hindi Medium</option>
                        <option value="English" <%= (data.medium == 'English') ? 'selected' : '' %>>English Medium</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Subject</label>
                    <select name="subject" id="subjectSelect" class="form-control" onchange="toggleExercise()" required>
                        <option value="">Select Subject...</option>
                        <option value="Mathematics" <%= (data.subject == 'Mathematics') ? 'selected' : '' %>>Mathematics</option>
                        <option value="Science" <%= (data.subject == 'Science') ? 'selected' : '' %>>Science</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Chapter Name</label>
                    <input type="text" name="chapterName" class="form-control" placeholder="e.g. Real Numbers" required 
                           value="<%= data.chapterName || '' %>">
                </div>

                <div class="form-group" id="exerciseField" style="display: none;">
                    <label>Exercise</label>
                    <input type="text" name="exercise" class="form-control" placeholder="e.g. 1.1" 
                           value="<%= data.exercise || '' %>">
                </div>

                <div class="form-group">
                    <label>Question No.</label>
                    <input type="text" name="questionNumber" class="form-control" placeholder="#" required 
                           value="<%= (!isSuccess && data.questionNumber) ? data.questionNumber : '' %>">
                </div>
            </div>

            <div class="form-group">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                    <label style="margin-bottom: 0;">Question Description</label>
                    <button type="button" class="tool-btn preview-btn" onclick="previewDescription()">üëÅÔ∏è Preview</button>
                </div>
                
                <textarea id="descInput" name="questionDescription" class="form-control" rows="3" placeholder="Describe question (supports math like $x^2$)..." required><%= (!isSuccess && data.questionDescription) ? data.questionDescription : '' %></textarea>
                
                <div id="desc-preview" class="preview-box"></div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Upload Image (Optional)</label>
                    <input type="file" name="questionImage" class="form-control" accept="image/*" style="padding: 9px;">
                </div>
                <div class="form-group">
                    <label>Video ID</label>
                    <input type="text" name="videoID" class="form-control" placeholder="YouTube ID (e.g. dQw4w9WgXcQ)" required 
                           value="<%= (!isSuccess && data.videoID) ? data.videoID : '' %>">
                </div>
            </div>

            <div class="form-group">
                <label>Text Solution / Notes</label>
                <div class="math-toolbar">
                    <button type="button" class="tool-btn" onclick="insertMath('\\frac{a}{b}')">¬Ω Frac</button>
                    <button type="button" class="tool-btn" onclick="insertMath('x^2')">x¬≤ Pow</button>
                    <button type="button" class="tool-btn" onclick="insertMath('\\sqrt{x}')">‚àö Root</button>
                    <button type="button" class="tool-btn" onclick="insertMath('\\times')">√ó Mult</button>
                    <button type="button" class="tool-btn" onclick="insertMath('$$ $$')">üìÑ Block</button>
                    <button type="button" class="tool-btn preview-btn" onclick="previewMath()">üëÅÔ∏è Preview</button>
                </div>

                <textarea id="solutionInput" name="textSolution" class="form-control" rows="8" 
                    placeholder="Type solution here..." 
                    style="border-top-left-radius: 0; border-top-right-radius: 0; border-top: none; font-family: 'Courier New', monospace;"><%= (!isSuccess && data.textSolution) ? data.textSolution : '' %></textarea>
            </div>
            
            <div id="math-preview" class="preview-box"></div>

            <button type="submit" class="btn-submit">üöÄ Upload Solution</button>
        </form>
    </div>
    <div style="height: 50px;"></div>
</div>

<script>
    // --- INSERT MATH HELPER ---
    function insertMath(code) {
        const ta = document.getElementById('solutionInput');
        const [start, end] = [ta.selectionStart, ta.selectionEnd];
        const text = ta.value;
        const insertText = code.includes('$$') ? code : '$' + code + '$';
        ta.value = text.substring(0, start) + insertText + text.substring(end);
        ta.selectionStart = ta.selectionEnd = start + insertText.length - (code.includes('$$') ? 3 : 1);
        ta.focus();
    }

    // --- PREVIEW FOR SOLUTION ---
    function previewMath() {
        const box = document.getElementById('math-preview');
        const input = document.getElementById('solutionInput');
        
        box.style.display = 'block';
        box.innerHTML = input.value.replace(/\n/g, "<br>"); 
        MathJax.typesetPromise([box]);
    }

    // --- PREVIEW FOR DESCRIPTION (NEW) ---
    function previewDescription() {
        const box = document.getElementById('desc-preview');
        const input = document.getElementById('descInput');

        box.style.display = 'block';
        box.innerHTML = input.value.replace(/\n/g, "<br>");
        MathJax.typesetPromise([box]);
    }

    // --- TOGGLE EXERCISE FIELD ---
    function toggleExercise() {
        const subject = document.getElementById('subjectSelect').value;
        const exField = document.getElementById('exerciseField');
        const exInput = exField.querySelector('input');
        
        if(subject === 'Mathematics') {
            exField.style.display = 'block';
            exInput.disabled = false; 
        } else {
            exField.style.display = 'none';
            exInput.disabled = true;  
            exInput.value = '';       
        }
    }
    window.onload = toggleExercise;

    setTimeout(() => {
        const s = document.getElementById('success-alert');
        const e = document.getElementById('error-alert');
        if (s) { s.style.opacity = '0'; setTimeout(() => s.style.display = 'none', 1000); }
        if (e) { e.style.opacity = '0'; setTimeout(() => e.style.display = 'none', 1000); }
    }, 4000);
</script>

</body>
</html>